# Weather Data Environment

# NOAA credentials
NOAA_API_TOKEN=YOUR_NOAA_TOKEN_HERE
NOAA_USER_AGENT="(salvadordali256.net, kyle@salvadordali256.net)"

# Storage path (adjust to your mounted directory)
STORAGE_PATH=/path/to/massive/drive/weather_data

# Database path
# On Pi with NAS: DB_PATH=/mnt/nas/weather/demo_global_snowfall.db
# Local development uses the default in scripts (demo_global_snowfall.db)
# DB_PATH=/mnt/nas/weather/demo_global_snowfall.db

# Forecast output directory (served via Cloudflare)
# On NAS: FORECAST_OUTPUT_DIR=/mnt/nas/forecast
FORECAST_OUTPUT_DIR=forecast_output

# Optional flags used by setup/orchestrator
USE_NOAA=true
USE_OPENMETEO=true
MAX_WORKERS=5
CHUNK_DAYS=365
