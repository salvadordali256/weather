# Weather Data Fetcher Configuration
# Copy this file to .env and fill in your values

# ==============================================================================
# NOAA NCEI API Configuration
# ==============================================================================
# Get your free API token at: https://www.ncdc.noaa.gov/cdo-web/token
NOAA_API_TOKEN=YOUR_NOAA_TOKEN_HERE

# ==============================================================================
# Storage Configuration
# ==============================================================================
# Where to store downloaded weather data
# Examples:
#   Local:  /Users/yourname/weather_data
#   Network: /mnt/nas/weather_data
#   External: /Volumes/ExternalDrive/weather_data
STORAGE_PATH=./weather_data

# ==============================================================================
# Data Source Configuration
# ==============================================================================
# Enable/disable data sources (true/false)
USE_NOAA=true
USE_OPENMETEO=true

# ==============================================================================
# Download Configuration
# ==============================================================================
# Date range for data collection (YYYY-MM-DD)
START_DATE=2000-01-01
END_DATE=2024-12-31

# Maximum number of stations per state (for NOAA)
MAX_STATIONS_PER_STATE=50

# Grid resolution for Open-Meteo (in degrees)
# Examples: 0.25 (fine), 0.5 (medium), 1.0 (coarse)
GRID_RESOLUTION=0.5

# ==============================================================================
# Storage Format Configuration
# ==============================================================================
# File format: parquet, csv, or feather
STORAGE_FORMAT=parquet

# Partition strategy: year, month, or none
PARTITION_BY=year

# ==============================================================================
# Performance Configuration
# ==============================================================================
# Maximum parallel workers for concurrent downloads
MAX_WORKERS=5

# Chunk size for date ranges (in days for NOAA, years for Open-Meteo)
CHUNK_DAYS=365
CHUNK_YEARS=5

# ==============================================================================
# Logging Configuration
# ==============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (leave empty for console only)
LOG_FILE=weather_orchestrator.log
